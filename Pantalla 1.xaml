<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="295" Width="189">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Login" Margin="0,0,0,20" Height="58" Width="314"/>
            <TextBox x:Name="EmailTextBox" Text="Email"/>
            <TextBox x:Name="EmailTextBox_Copiar" Text="Email"/>
            <Button x:Name="LoginButton" Content="Iniciar Sesion" Width="200
                    " Height="40" Margin="0,0,0,20"/>
            <Button x:Name="CreateAccountButton" Content="Crear Cuenta" Width="200" Height="40" Margin="0,0,0,20"/>
            <Button x:Name="RecoverPasswordButton" Content="Recuperar Contraseña" Width="200" Height="40" Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>
</Window>